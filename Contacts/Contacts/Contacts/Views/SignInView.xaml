<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Views.SignInView">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="125">

                <Frame BackgroundColor="#2196F3" Padding="12"  CornerRadius="0">
                    <Label Text="  User SignIn" HorizontalTextAlignment="Start" TextColor="White" FontSize="24"/>
                </Frame>

                <StackLayout Spacing="12" Padding="20,10,20,10">
                    <Entry x:Name="loginEntry" Placeholder="Login" Margin="20" />
                    <Entry x:Name="passwordEntry"  Placeholder = "Password" IsPassword ="True" Margin="20" />
                </StackLayout>

                <Button Text = "Sign In"  FontSize="Large"  Padding="120,20,120,20"
                      HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>