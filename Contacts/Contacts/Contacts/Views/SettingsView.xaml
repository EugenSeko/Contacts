<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Views.SettingsView">
    
    
    <ContentPage.Content>
        <Grid RowDefinitions="0.08*,0.9*">
            <Grid Grid.Row="0"
                     BackgroundColor="#2196F3">
                <ImageButton Grid.Column="0" Command="{Binding LeftArrowCommand}"
                         Source="arrowL.png" 
                         BackgroundColor="Transparent"
                         HorizontalOptions="Start" Margin="20,0,0,0"
                         HeightRequest="40" 
                         WidthRequest="25">
                </ImageButton>
                <Label Grid.Column="1" 
                   Text="Settings" FontSize="Title"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
                <Label Grid.Column="2" 
                       IsVisible="false"
                   Text="Settings" FontSize="Title"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
            </Grid>
            <StackLayout Grid.Row="1" Padding="40"
                     RadioButtonGroup.GroupName="sorting"
                     RadioButtonGroup.SelectedValue="{Binding SelectedSorting}">
                <Label Text="Sorting by.." />
                <RadioButton Content="By Name" Value="Name" IsChecked="{Binding IsNameChecked}"/>
                <RadioButton Content="By Nickname" Value="NickName" IsChecked="{Binding IsNickNameChecked}" />
                <RadioButton Content="By Date" Value="CreationTime" IsChecked="{Binding IsCreationTimechecked}" />
                <StackLayout 
                       RadioButtonGroup.GroupName="descending" 
                       RadioButtonGroup.SelectedValue="{Binding SelectedDescending}">
                    <Label Text="Descending.." />
                    <RadioButton Content="By Ascending" Value="false" IsChecked="{Binding IsAscendChecked}"/>
                    <RadioButton Content="By Descending" Value="true" IsChecked="{Binding IsDescendChecked}"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Dark Theme"/>
                    <Switch OnColor="Orange" IsToggled="{Binding IsDarkToggled}"
                        ThumbColor="Green" /> 
                </StackLayout>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>