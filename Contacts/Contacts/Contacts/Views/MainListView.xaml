<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Views.MainListView">
    <ContentPage.Content>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid RowDefinitions="56, *"
                  >
                <Grid Grid.Row="0" BackgroundColor="#2196F3"
                       ColumnDefinitions="0.7*,0.3*,0.3*"
                      ColumnSpacing="0"
                         >

                    <Label Text="Main List" 
                    BackgroundColor="Transparent"
                    FontSize="Title"
                    Margin="16,0,0,0"
                    Grid.Column="0"
                    VerticalOptions="Center"
                    />

                    <ImageButton Source ="plus.png"
                     BackgroundColor="Transparent"
                     Margin="0,0,0,0"  
                     Padding="0,0,0,0"            
                     Grid.Column="1"
                     VerticalOptions="Center"
                     HeightRequest="35"
                     Command="{Binding OnLogautButtonTap}"            
                     />

                    <ImageButton Source ="plus.png"
                     BackgroundColor="Transparent"
                     Margin="0,0,0,0"
                     Padding="0,0,0,0"           
                     Grid.Column="2"
                     VerticalOptions="Center"
                     HeightRequest="35"
                     Command="{Binding OnSettingsButtonTap}"          
                     />

                </Grid>

                <ListView Grid.Row="1"
                  HasUnevenRows="True"
                  SelectedItem="{Binding SelectedItem}"
                  ItemsSource="{Binding ProfileList}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.ContextActions >
                                    <MenuItem Text="Вверх"
                                       Command= "{Binding MoveToTopCommand}" /> <!--текущая не биндится-->
                                    <MenuItem Text="Вниз"
                                              Command="{Binding Path=ListViewModel.MoveToBottomCommand}"
                                              CommandParameter="{Binding}" />
                                    <MenuItem Text="Удалить"
                                              Command="{Binding Path=ListViewModel.RemoveCommand}" 
                                              CommandParameter="{Binding}" />
                                </ViewCell.ContextActions>
                                <ViewCell.View>
                                    <Grid ColumnDefinitions="0.3*,0.7*"  >
                                        <StackLayout Grid.Column="1">

                                            <Label Text="{Binding FirstName}"/>

                                            <Label Text="{Binding Id}"/>

                                            <Label Text="{Binding LastName}"/>

                                            <Label Text="{Binding CreationTime}"/>

                                        </StackLayout>

                                        <Frame Grid.Column="0" >
                                            <Image Source="user.png"
                                                   Aspect="AspectFit"
                                                   HeightRequest="90"/>
                                        </Frame>
                                    </Grid>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Grid>

            <ImageButton Source ="plus.png"
                         Command="{Binding OnAddButtonTap}"
                         BackgroundColor="#2196F3" 
                         CornerRadius="60"
                         WidthRequest="70" 
                         HeightRequest="70"
                         Margin="0,0,30,42"
                         VerticalOptions="End"
                         HorizontalOptions="End"
                        />

        </Grid>

    </ContentPage.Content>
</ContentPage>