<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Views.TestPage">
    <Grid RowDefinitions="70, 70, *" >
        <Grid Grid.Row="0"
              ColumnDefinitions="0.3*,0.3*,0.3*">
            
            <Button Text="Switch theme"
                    StyleClass="Sc"
                    Grid.Column="0"
                    VerticalOptions="Center"
                    Command="{Binding DeleteTapCommand}"/>
            
            <Entry Placeholder="First Name"
                   StyleClass="Entry"
                   Grid.Column="1"
                   VerticalOptions="Center"
                   Text="{Binding FirstName}"/>
            
            <Entry Placeholder="Last Name"
                   Grid.Column="2"
                   VerticalOptions="Center"
                   Text="{Binding LastName}"/>

        </Grid>

        <Grid Grid.Row="1"
              ColumnDefinitions="0.5*, 0.5*">
            
            <Button Grid.Column="0"
                    Text="Delete"
                    Command="{Binding DeleteTapCommand}"/>
            
            <Button Grid.Column="1"
                    Text="Update"
                    Command="{Binding UpdateTapCommand}"/>

        </Grid>
        
        <ListView Grid.Row="2"
                  HasUnevenRows="True"
                  SelectedItem="{Binding SelectedItem}"
                  ItemsSource="{Binding ProfileList}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <Grid>
                                <StackLayout>
                                    
                                    <Label Text="{Binding FirstName}"/>
                                    
                                    <Label Text="{Binding LastName}"/>

                                    <Label Text="{Binding CreationTime}"/>
                                    
                                </StackLayout>
                            </Grid>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
    

</ContentPage>
